                        <CheckBox id="stayAliveBox6" mnemonicParsing="false" text="6" />
                        <CheckBox id="stayAliveBox7" mnemonicParsing="false" text="7" />
                        <CheckBox id="stayAliveBox8" mnemonicParsing="false" text="8" />
                     </children>
                  </HBox>
                  <Separator orientation="VERTICAL" prefHeight="10.0" visible="false" />
                  <Label text="Neighbours to get alive" />
                  <HBox prefWidth="200.0">
                     <children>
                        <CheckBox id="getAliveBox0" mnemonicParsing="false" text="0" />
                        <CheckBox id="getAliveBox1" mnemonicParsing="false" text="1" />
                        <CheckBox id="getAliveBox2" mnemonicParsing="false" text="2" />
                        <CheckBox id="getAliveBox3" mnemonicParsing="false" selected="true" text="3" />
                        <CheckBox id="getAliveBox4" mnemonicParsing="false" text="4" />
                        <CheckBox id="getAliveBox5" mnemonicParsing="false" text="5" />
                        <CheckBox id="getAliveBox6" mnemonicParsing="false" text="6" />
                        <CheckBox id="getAliveBox7" mnemonicParsing="false" text="7" />
                        <CheckBox id="getAliveBox8" mnemonicParsing="false" text="8" />
                     </children>
                  </HBox>
