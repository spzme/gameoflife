                  <Separator orientation="VERTICAL" prefHeight="10.0" visible="false" />
                  <Label text="Columns" />
                  <TextField id="columnInputField" text="10" />
                  <Separator orientation="VERTICAL" prefHeight="15.0" visible="false" />
                  <Label text="Speed">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Label>
                  <HBox>
                     <children>
                        <Slider id="speedSlider" majorTickUnit="1.0" max="20.0" min="1.0" value="1.0" />
